;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
; Реализовать команду ASL и ASLB
; Двоичный код ASL:  0 000 110 011 ddd ddd
; Двоичный код ASLB: 1 000 110 011 ddd ddd
; Формат ассемблера: ASL dst
; Формат ассемблера: ASLB dst
; Сдвинуть dst на 1 бит влево. Дополнить младший бит 0. 
; Сдвинутый старший бит записывается в С.
; N, Z - по результату операции
; V = N xor C
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
; oct: 123457
; bin:   1 010 011 100 101 111 123457
; asl: 1 0 100 111 001 011 110 047136
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

    .=200
A:  .WORD  123457
B:  .BYTE  123, 123

    .=1000
    mov #A, R0      ; R0 = 200
    mov (R0)+, R1   ; R1 = 123457
     
    asl R1          ; R1 = 47136
    
    aslb (R0)       ; [202] = 246
    movb (R0), R3   ; R3 = 246 -> 177646
    mov (R0), R4    ; R4 = [01 010 011 10 100 110 ] = 
                    ;    = [0 101 001 110 100 110] = 051646
    
    halt
